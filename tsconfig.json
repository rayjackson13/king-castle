{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "ESNext",
    "allowJs": false,
    "moduleResolution": "node",
    "lib": ["DOM"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules/", "build/"]
}